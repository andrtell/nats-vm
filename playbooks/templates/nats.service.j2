[Unit]
Description=Nats
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target podman.socket
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
	--cidfile=%t/%n.ctr-id \
	--cgroups=no-conmon \
	--sdnotify=conmon \
	--name=nats \
	--network=nats \
	--replace \
	-d \
	-v /home/agent/nats/nats.config:/nats.config:ro \
	-v /home/agent/certs/fullchain.pem:/fullchain.pem:ro \
	-v /home/agent/certs/privkey.pem:/privkey.pem:ro \
	--secret nats_token,type=env,target=NATS_TOKEN \
	-p 4222:4222 \
	-p 6222:6222 \
	-p 8222:8222 \
	docker.io/nats:latest -c /nats.config
ExecStop=/usr/bin/podman stop \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
	-f \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
